{
  "name": "gamma-dev",
  "build": { "dockerfile": ".devcontainer/Dockerfile" },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.analysis.typeCheckingMode": "basic",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "postCreateCommand": "pip install --upgrade pip && pip install numpy scipy sympy matplotlib"
}
